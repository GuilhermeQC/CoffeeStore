<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DFBB93"
    android:gravity="center_horizontal"
    android:padding="24dp">

    <!-- Espaçador -->

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>

    <!-- Logo -->
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:src="@drawable/logo"
        android:scaleType="centerInside"
        android:layout_marginBottom="32dp"/>

    <!-- Espaçador -->

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"/>

    <!-- Campo Usuário -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Usuário"
        android:textSize="14sp"
        android:textColor="#432712"/>

    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edit_text_background"
        android:hint="Digite seu usuário"
        android:paddingHorizontal="16dp"
        android:textColor="#432712"
        android:textColorHint="#805E361C"
        android:layout_marginBottom="16dp"/>

    <!-- Campo Senha -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Senha"
        android:textSize="14sp"
        android:textColor="#432712"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edit_text_background"
        android:layout_marginBottom="24dp">

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Digite sua senha"
            android:inputType="textPassword"
            android:paddingStart="16dp"
            android:paddingEnd="48dp"
            android:textColor="#432712"
            android:textColorHint="#805E361C" />

        <ImageView
            android:id="@+id/showPasswordIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/visibility"/>
    </RelativeLayout>

    <!-- Botão Entrar -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Entrar"
        android:textColor="#432712"
        android:textSize="16sp"
        app:cornerRadius="24dp"
        app:strokeWidth="1dp"
        app:strokeColor="#432712"
        app:backgroundTint="#EEC9A0"/>

    <!-- Espaçador -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


    <!-- Rodapé -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eunápolis - BA\nVersão - 1.1.10"
        android:textSize="12sp"
        android:textColor="#432712"
        android:gravity="bottom"
        android:layout_marginTop="32dp"/>

</LinearLayout>
