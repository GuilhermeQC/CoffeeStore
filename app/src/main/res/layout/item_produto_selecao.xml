<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/card_background"
    android:padding="12dp"
    android:layout_marginBottom="12dp"
    android:gravity="center_vertical">

    <!-- Imagem Produto -->
    <ImageView
        android:id="@+id/image_view_produto"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/image_include"
        android:background="#E2DBBF"
        android:padding="8dp"
        android:scaleType="centerInside"/>

    <!-- Informações -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp">

        <TextView
            android:id="@+id/text_view_nome_produto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Produto"
            android:textColor="#432712"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_valor_produto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Valor: R$ 99,90"
            android:textColor="#432712"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Seletor de Quantidade com Ícones -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!-- Botão Diminuir com Ícone -->
        <ImageButton
            android:id="@+id/button_diminuir"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/remove"
            android:backgroundTint="#5E361C"
            android:contentDescription="Diminuir quantidade"/>

        <TextView
            android:id="@+id/text_view_quantidade"
            android:text="0"
            android:layout_marginHorizontal="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#5E361C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Botão Aumentar com Ícone -->
        <ImageButton
            android:id="@+id/button_aumentar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/add"
            android:backgroundTint="#5E361C"
            android:contentDescription="Aumentar quantidade"/>
    </LinearLayout>

</LinearLayout>
