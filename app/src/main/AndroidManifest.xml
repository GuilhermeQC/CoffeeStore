<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".CoffeeStoreApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo_coffee"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_coffee"
        android:supportsRtl="true"
        android:theme="@style/Theme.CoffeeStore"
        tools:targetApi="31">

        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ProdutosActivity" />
        <activity android:name=".EditarPedidoActivity" />
        <activity android:name=".PedidosActivity" />
        <activity android:name=".EditarProdutoActivity" />
        <activity android:name=".NovoPedidoActivity" />
        <activity android:name=".NovoProdutoActivity"/>

    </application>

</manifest>